.i-modal
  position: fixed
  top 0
  left 0
  height 100%
  width 100%
  background-color rgba(0, 0, 0, 0.5)
  z-index 1000
  overflow auto
  .i-content
    position: relative
    top 10%
    left 50%
    width 50%
    min-height 100px
    background-color #ffffff
    margin-bottom 10%
    transform translateX(-50%)
    padding 20px
    overflow hidden
    .i-close
      position: absolute
      top 0
      right: 0
      height 50px
      width 50px
      background-color #363636
      color yellow
      text-align center
      line-height 45px
      transition all .2s ease
      z-index 200
      i
        padding 0
        margin 0
      &:hover
        cursor pointer
        animation pulse .5s ease
        background-color yellow
        i
          animation pulse 1s linear
          color: black
