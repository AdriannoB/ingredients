.i-select
  span(1)
  cf()
  margin-top fieldLabelHeight
  min-height fieldHeight
  box-sizing border-box
  .i-select-search
    span(1)
    cf()
    input
      span(1)
      box-sizing border-box
      border 2px solid fieldBorderColor
      height fieldHeight
      line-height fieldHeight
      margin 0
      padding 0
      padding-left 5px
      padding-right fieldHeight

  .i-select-toggle
    relative top left
    float right
    box-sizing border-box
    width fieldHeight
    height fieldHeight
    line-height fieldHeight
    text-align center
    border 2px solid fieldBorderColor
    border-left 2px solid fieldBorderColor
    cursor pointer
    margin 0
    padding 0
    margin-top fieldHeight * -1
    &:hover
      color #cccccc
    &:active
      background-color white
  .i-select-list
    span(1)
    cf()
    outline 2px solid silver
    background-color white
    .i-select-item
      span(1)
      background-color white
      margin-bottom 2px
      z-index 200
      &:hover
        background-color #cccccc
        cursor pointer

