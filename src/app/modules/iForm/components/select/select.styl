.i-select
  position relative
  width 100%
  height 40px
  border 1px solid silver
  border-radius 2px
  box-sizing border-box
  .i-select-search
    position: relative
    height 100%
    width 80%
    box-sizing border-box
    float left
  .i-select-toggle
    box-sizing border-box
    line-height 40px
    width 20%
    text-align center
    float left
    cursor pointer
    &:hover
      color #cccccc
  .i-select-list
    position: absolute
    top 100%
    width 100%
    min-height 40px
    border 1px solid silver
    .i-select-item
      min-height 40px
      line-height 40px
      background-color white
      margin-bottom 2px
      &:hover
        background-color #cccccc
        cursor pointer
