.i-switch
  span(1, 1/100)
  cf()
  height rowHeight
  .i-switch-option
    relative top left
    float left
    height fieldHeight
    margin-top fieldLabelHeight
    box-shadow 0 0 2px 0 silver
    text-align center
    line-height fieldHeight
    &:hover
      background-color #cccccc
      cursor pointer
    &:active
      background-color yellow
      color: #000
    &.active
      background-color yellow
      color: #000

