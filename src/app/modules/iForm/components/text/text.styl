.i-text
  span(1)
  cf()
  .i-text-label
    column(1)
    font-size fontLabelHeight
    line-height fieldLabelHeight
    padding 0
    margin 0
    color fieldLabelColor
    font-weight bold
    &.inline
      span(1/5)
      line-height fieldLabelHeight+rowHeight
      text-align center
  .i-text-output
    column(1)
    box-shadow 0 0 2px 0 silver
    box-sizing border-box
    padding-left 5px
    height fieldHeight
    line-height fieldHeight
    owerflow hidden
    &.nolabel
      margin-top fieldLabelHeight
    &.inline
      col(5/7)
      margin-top fieldLabelHeight
      overflow hidden
