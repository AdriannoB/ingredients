.i-file-upload
  position: relative
  width: 100%
  min-height: 100px
  left: 50%
  transform: translateX(-50%)
  text-align: center
  margin-bottom: 40px
  padding: 10px
  &:hover
    background: white
  .fileInput
    position: relative
    float: left
    margin-bottom: 0
    height: 100px
    line-height: 2
    border: 3px dashed #eee
    padding-top: 20px
    font-size: 16px
    &:before
      font-size: 30px
    &:hover
      background-color: #fcfcfc
  .preview
    position: relative
    height: 100px
    overflow: hidden
    margin: 0
    padding: 0
    background-size: cover
    background-position: center center
    background-repeat: no-repeat
    img
      width: 100%
      height: auto
      margin: 0
      padding: 0
  .filesCount
    position: absolute
    right: 0
    background: red
    width: 50px
    height: 30px
    line-height: 30px
    z-index: 20
    text-align: center
    color: white
    box-shadow: 0 0 5px -1px #616161
